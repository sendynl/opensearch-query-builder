{
    "name": "sendynl/opensearch-query-builder",
    "description": "Build and execute an OpenSearch search query using a fluent PHP API",
    "keywords": [
        "spatie",
        "sendy",
        "opensearch-query-builder",
        "opensearch",
        "search"
    ],
    "homepage": "https://github.com/sendynl/opensearch-query-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Vanderbist",
            "email": "alex.vanderbist@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Ruben Van Assche",
            "email": "ruben@spatie.be",
            "role": "Developer"
        },
        {
            "name": "Wim Griffioen",
            "email": "w.griffioen@sendy.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "nyholm/psr7": "^1.8",
        "opensearch-project/opensearch-php": "^2.0",
        "php-http/mock-client": "^1.5",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "symfony/http-client": "^7.3",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Sendy\\OpenSearchQueryBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sendy\\OpenSearchQueryBuilder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyze",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
